<h1>ユーザー検索結果</h1>

<ul>
  <% @users.each do |user| %>
    <li class="user-list-item">
      <!-- アイコン表示 -->
      <% if user.avatar.attached? %>
        <%= link_to image_tag(user.avatar, class: 'user-avatar-small', alt: user.name), user_profile_path(user), class: 'user-avatar-link' %>
      <% else %>
        <%= link_to image_tag('default_avatar.png', class: 'user-avatar-small', alt: user.name), user_profile_path(user), class: 'user-avatar-link' %>
      <% end %>

      <!-- ユーザー名表示 -->
      <%= link_to user.name, user_profile_path(user), class: 'user-name-link' %>

      <!-- フォローボタン表示 -->
      <% unless current_user.followees.include?(user) || current_user == user %>
        <%= link_to 'フォロー', users_follow_path(followed_id: user.id), method: :post, class: "btn btn-primary" %>
      <% end %>
    </li>
  <% end %>
</ul>