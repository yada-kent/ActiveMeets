<h1>プロフィール編集</h1>

<%= form_with(model: @user, url: users_path, method: :patch) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :introduction %>
    <%= form.text_field :introduction %>
  </div>
  <div>
    <%= form.submit "更新" %>
  </div>
<% end %>