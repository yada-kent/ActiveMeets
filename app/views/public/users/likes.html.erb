<div class="d-flex justify-content-center mb-5">
  <h1>いいねした投稿一覧</h1>
</div>

<div class="d-flex justify-content-center jscroll">
  <div class="post-container">
    <% posts_to_display = @liked_posts.is_a?(Array) ? @liked_posts : @liked_posts.order(created_at: :desc) %>
    <% posts_to_display.each do |post| %>
      <%= render 'public/posts/post', post: post %>
    <% end %>

    <% if @liked_posts.respond_to?(:total_pages) %>
      <%= paginate @liked_posts %>
    <% end %>
  </div>
</div>


<script>
  $(document).on('turbolinks:load', function() {
    $('.jscroll').jscroll({
      contentSelector: '.jscroll',
      nextSelector: '.next a',
      loadingHtml: '読み込み中',
      padding: 10
    });
  });
</script>