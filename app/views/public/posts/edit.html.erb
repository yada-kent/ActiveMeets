<h1>投稿の編集</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body, '内容' %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.label :tag_names, 'タグ（カンマ区切りで複数入力可能）' %>
    <%= form.text_field :tag_names, value: @post.tag_names.join(",") %>
  </div>
  <div>
    <%= form.submit '更新' %>
  </div>
<% end %>
